# Set Loopback Address
nv set interface lo ip address 10.10.7.215/32

# Assign VLAN 103 and IP Address
nv set interface vlan103 ip address 10.10.8.130/25
nv set interface vlan103 vlan id 103

# Assign VLAN 103 to Ports 22-43
nv set interface swp22-43 bridge domain br_default

# Configure Bridge Domain
nv set bridge domain br_default vlan 103
nv set bridge domain br_default untagged 1

# Configure BGP
nv set router bgp autonomous-system 65183
nv set router bgp router-id 10.10.7.215

# Advertise Backend Network
nv set vrf default router bgp address-family ipv4-unicast network 10.10.8.128/25

# Apply Configuration
nv config apply
