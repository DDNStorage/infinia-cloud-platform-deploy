# Set Loopback Address
nv set interface lo ip address 10.10.7.218/32

# Assign VLAN 102 and IP Address
nv set interface vlan102 ip address 10.10.7.130/25
nv set interface vlan102 vlan id 102

# Assign VLAN 102 to Ports 22-64
nv set interface swp22-64 bridge domain br_default

# Configure Bridge Domain
nv set bridge domain br_default vlan 102
nv set bridge domain br_default untagged 1

# Configure BGP
nv set router bgp autonomous-system 65182
nv set router bgp router-id 10.10.7.218

# Advertise Frontend Network
nv set vrf default router bgp address-family ipv4-unicast network 10.10.7.128/25

# Apply Configuration
nv config apply
