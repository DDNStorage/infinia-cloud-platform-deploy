# Set Loopback Address
nv set interface lo ip address 10.10.7.217/32

# Assign VLAN 101 and IP Address
nv set interface vlan101 ip address 10.10.6.129/25
nv set interface vlan101 vlan id 101

# Assign VLAN 101 to Ports 22-43
nv set interface swp22-43 bridge domain br_default

# Configure Bridge Domain
nv set bridge domain br_default vlan 101
nv set bridge domain br_default untagged 1

# Configure BGP
nv set router bgp autonomous-system 65181
nv set router bgp router-id 10.10.7.217

# Advertise Backend Network
nv set vrf default router bgp address-family ipv4-unicast network 10.10.6.128/25

# Apply Configuration
nv config apply
